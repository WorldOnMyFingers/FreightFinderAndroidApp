<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewPickoFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/view">



    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_new_picko"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="310dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="@dimen/inside_card_item_margin"
            android:layout_marginLeft="@dimen/inside_card_item_margin"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/descriptionText"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape"
            android:textCursorDrawable="@null"
            android:hint="@string/question"
            android:padding="10dp"
            android:textSize="14dp"
            android:gravity="top"
            android:layout_gravity="center_horizontal|top"
            android:maxLength="160"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/vertical_divider"
            android:showDividers="middle"
            android:dividerPadding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/inside_card_linearlayout_margin_top"
            android:layout_marginLeft="@dimen/inside_card_item_margin"
            android:layout_marginRight="@dimen/inside_card_item_margin"
            android:showDividers="middle"
            android:divider="@drawable/horizontal_linearlayout_divider"
            android:dividerPadding="10dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_add_a_photo_black_48dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_add_a_photo_black_48dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/inside_card_item_margin"
            android:layout_marginRight="@dimen/inside_card_item_margin"
            android:showDividers="middle"
            android:divider="@drawable/horizontal_linearlayout_divider"
            android:dividerPadding="10dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_add_a_photo_black_48dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_add_a_photo_black_48dp"/>



        </LinearLayout>

        </LinearLayout>


        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="340dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Submit"
            android:textSize="10sp"
            android:layout_alignBottom="@+id/view"
            android:layout_centerHorizontal="true" />

    </android.support.v7.widget.CardView>



