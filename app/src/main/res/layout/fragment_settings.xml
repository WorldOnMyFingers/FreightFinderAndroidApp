<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emrebabayigit.pickoapp.fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/seekbarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:layout_gravity="center"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:text="100"
        android:textSize="40dp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progress="100"
        android:max="200" />

    <TextView
        android:id="@+id/textViewKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_gravity="center"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/seekbarValue"
        android:layout_toRightOf="@+id/seekbarValue"
        android:text="Km"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginTop="65dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinnerCounty"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerCity"
        android:layout_alignStart="@+id/spinnerCity"
        android:layout_below="@+id/spinnerCity"
        android:layout_marginTop="31dp"
        android:gravity="center" />

</RelativeLayout>
